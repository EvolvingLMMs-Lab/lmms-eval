/* LMMs-Eval TUI Stylesheet */
/* Hot-reload enabled: run with `textual run --dev` for live CSS updates */

$primary: #4ec9b0;
$primary-light: #8fe8da;
$primary-dark: #3aa08a;
$accent: #e5a84b;
$accent-dim: #c9923f;
$bg-dark: #1a2832;
$bg-medium: #223644;
$bg-light: #2a4254;
$text-bright: #ffffff;
$text-normal: #d0d0d0;
$text-dim: #7a9eb5;
$success: #4ec9b0;
$warning: #e5a84b;
$error: #f87171;
$surface: #1e3040;
$background: #1a2832;

Screen {
    background: $bg-dark;
    color: $text-normal;
}

Tooltip {
    background: $primary;
    color: $text-bright;
    border: solid $accent;
}

/* Welcome Screen */
WelcomeScreen {
    align: center middle;
    background: $bg-dark;
}

WelcomeScreen #welcome-container {
    width: 70;
    height: auto;
    border: round $primary;
    background: $bg-medium;
    padding: 2 4;
    align: center middle;
}

WelcomeScreen #welcome-container:hover {
    border: round $primary-light;
    background: $bg-light;
}

WelcomeScreen #welcome-title {
    color: $primary-light;
    text-style: bold;
    content-align: center middle;
    margin-bottom: 1;
}

WelcomeScreen #logo {
    margin: 1 0;
    content-align: center middle;
    color: $primary;
}

WelcomeScreen #version-info {
    color: $text-dim;
    content-align: center middle;
    margin-bottom: 2;
}

WelcomeScreen #continue-msg {
    color: $text-dim;
    content-align: center middle;
    margin-top: 1;
}

WelcomeScreen .copyright {
    color: $text-dim;
    content-align: center middle;
    margin-top: 1;
}

Header {
    background: $bg-medium;
    color: $text-bright;
    dock: top;
    height: 1;
}

/* Header with Command Preview */
#header-split {
    height: 14;
    dock: top;
    background: $bg-dark;
    border-bottom: solid $bg-light;
}

#header-left {
    width: 50%;
    height: 100%;
    border-right: solid $bg-light;
}

#header-title {
    background: $bg-dark;
    color: $text-bright;
    text-style: bold;
    padding: 0 1;
}

#header-left-content {
    height: 1fr;
    padding: 1;
}

#logo-container {
    width: 20;
    height: 10;
    margin-right: 1;
}

#header-image {
    width: 100%;
    height: 100%;
}

#header-info {
    color: $text-normal;
}

#header-right {
    width: 50%;
    height: 100%;
    padding: 0;
    background: $bg-dark;
}

#preview-title {
    background: $bg-dark;
    color: $text-bright;
    text-style: bold;
    padding: 0 1;
}

#command-preview-scroll {
    height: 1fr;
    background: $bg-dark;
    padding: 1 1 0 1;
    border: none;
}

#command-preview-scroll #run-command {
    color: $accent;
}

/* Config Screen Main Area - Split Layout */
#config-container {
    height: 1fr;
    padding: 0;
}

#main-split {
    height: 1fr;
}

#left-panel {
    width: 50%;
    height: 100%;
    border-right: solid $bg-light;
}

#right-panel {
    width: 50%;
    height: 100%;
    padding: 0 1;
    background: $bg-dark;
}

#right-panel .section-title-first {
    margin: 1 0 1 0;
}

#right-panel #run-status {
    height: 1;
    margin: 0 0 1 0;
    color: $text-dim;
}

#right-panel #output-scroll {
    height: 1fr;
    border: none;
    background: $bg-dark;
}

/* Panel Headers - Tabs and Buttons aligned */
#left-header {
    height: 4;
    background: $bg-medium;
    border-bottom: solid $bg-light;
    padding: 0 1;
    dock: top;
    align: left middle;
}

#right-header {
    height: 4;
    background: $bg-medium;
    border-bottom: solid $bg-light;
    padding: 0 1;
    dock: top;
    align: left middle;
}

#right-header Button {
    height: 3;
    min-width: 10;
    margin: 0 0 0 1;
    content-align: center middle;
    padding: 1 2;
}

.custom-tab {
    background: $bg-medium;
    color: $text-dim;
    border-top: solid transparent;
    border-bottom: solid transparent;
    margin-right: 1;
    padding: 0 2;
    min-width: 12;
    height: 3;
    text-style: none;
    content-align: center middle;
}

.custom-tab:hover {
    color: $text-bright;
    background: $bg-light;
    border-bottom: solid $text-bright;
    border-top: solid transparent;
}

.custom-tab-active {
    background: $bg-light;
    color: $primary-light;
    text-style: bold;
    border-bottom: solid $text-bright;
    border-top: solid transparent;
}

.custom-tab:focus {
    color: $primary-light;
    background: $bg-light;
    border-bottom: solid $text-bright;
    border-top: solid transparent;
}

.custom-tab-active:focus {
    color: $primary-light;
    background: $bg-light;
    border-bottom: solid $text-bright;
    border-top: solid transparent;
}

#tab-content {
    background: $bg-dark;
}

#tab-content > Container {
    padding: 0 2;
    background: $bg-dark;
}

VerticalScroll {
    padding: 0;
}

.tab-placeholder {
    width: 100%;
    height: 100%;
    content-align: center middle;
    color: $text-dim;
}

.section-title {
    color: $primary-light;
    text-style: bold;
    margin: 2 0 1 0;
    padding: 0 0 0 0;
    border-bottom: solid $bg-light;
}

/* First section title should have less top margin */
.section-title-first {
    color: $primary-light;
    text-style: bold;
    margin: 1 0 1 0;
    padding: 0 0 0 0;
    border-bottom: solid $bg-light;
}

.hint-text {
    margin: 0 0 1 0;
}

Rule {
    color: $bg-light;
    margin: 0;
    /* Rule is no longer used in Settings tab - sections use spacing and border instead */
}

Select {
    margin: 0 0 1 0;
}

Input {
    margin: 0 0 1 0;
}

/* Inputs & Selects - Clean flat style */
Input {
    background: $bg-medium;
    border: none;
    border-left: solid transparent;
    color: $text-bright;
    padding: 0 1;
}

Input:hover {
    background: $bg-light;
}

Input:focus {
    background: $bg-light;
    border-left: solid $primary;
}

.api-env-textarea {
    height: 5;
    background: $bg-medium;
    border: none;
    border-left: solid transparent;
    color: $text-bright;
    margin: 0 0 1 0;
    padding: 0 1;
}

.api-env-textarea:hover {
    background: $bg-light;
}

.api-env-textarea:focus {
    background: $bg-light;
    border-left: solid $primary;
}

Select {
    background: $bg-medium;
    border: none;
    border-left: solid transparent;
    color: $text-bright;
}

Select:hover {
    background: $bg-light;
}

Select:focus {
    border-left: solid $primary;
    background: $bg-light;
}

SelectCurrent {
    background: transparent;
    color: $text-bright;
    border: none;
    padding: 0 1;
}

OptionList {
    background: $bg-medium;
    border: none;
    border-left: solid transparent;
}

OptionList:focus {
    border-left: solid $primary;
}

OptionList > .option-list--option-highlighted {
    background: $primary-dark;
    color: $text-bright;
}

/* Task Cards */
#selected-tasks-container {
    height: auto;
    min-height: 3;
    padding: 1 0;
    width: 100%;
}

.task-card {
    width: auto;
    min-width: 10;
    height: 3;
    margin: 0 1 0 0;
    border: none;
    background: $bg-medium;
    color: $text-normal;
    padding: 0 1;
}

.task-card:hover {
    background: $bg-light;
    color: $text-bright;
}

.no-tasks-msg {
    color: $text-dim;
    padding: 1 0;
}

Switch {
    background: $bg-medium;
    border: none;
}

Switch > .switch--slider {
    color: $primary-dark;
    background: $bg-light;
}

Switch.-on > .switch--slider {
    color: $primary;
}

/* Settings Tab Styling */
.setting-row {
    height: auto;
    margin: 0 0 1 0;
    align: left middle;
}

.setting-row-last {
    margin: 0;
}

.setting-row Input {
    margin: 0;
    height: 1;
}

.setting-row Select {
    margin: 0;
    height: 1;
}

.setting-label {
    width: 18;
    padding: 0 1 0 0;
    color: $text-normal;
    content-align: left middle;
}

.setting-input {
    width: 30;
    height: 1;
}

/* Section separator - visual grouping with spacing */
.section-separator {
    height: 2;
    margin: 0;
    /* Empty space acts as visual separator between sections */
}

/* Run Tab Styling */
#run-tab {
    padding: 1 2;
}

#run-tab-scroll {
    height: 1fr;
}

#run-command {
    background: $bg-medium;
    border: none;
    padding: 1;
    margin-bottom: 1;
    color: $text-dim;
}

#run-status {
    background: transparent;
    border: none;
    padding: 0;
    color: $text-bright;
    margin-bottom: 1;
}

#run-output {
    color: $accent;
    background: $bg-dark;
    padding: 0 1;
}

#output-scroll {
    border: solid $bg-light;
    background: $bg-dark;
    height: 1fr;
    min-height: 10;
}

/* Buttons - Flat Modern Style */
Button {
    width: 18;
    height: 3;
    border: none;
    background: $bg-medium;
    color: $text-normal;
    text-style: bold;
    content-align: center middle;
}

Button:hover {
    border: none;
    background: $bg-light;
    color: $text-bright;
}

Button:focus {
    border: none;
    background: $bg-light;
    color: $accent;
}

/* Primary (Save) - Amber/Gold for Configuration Actions */
Button.-primary {
    border: none;
    background: #7a5c2f;
    color: $text-bright;
}

Button.-primary:hover {
    border: none;
    background: $accent-dim;
    color: $text-bright;
}

Button.-primary:focus {
    border: none;
    background: $accent-dim;
    color: $text-bright;
}

/* Success (Start) - Teal for Primary Execution Action */
Button.-success {
    border: none;
    background: $primary-dark;
    color: $text-bright;
}

Button.-success:hover {
    border: none;
    background: $primary;
}

Button.-success:focus {
    border: none;
    background: $primary;
    color: $text-bright;
}

/* Error (Stop) - Muted Red for Destructive Action */
Button.-error {
    border: none;
    background: #753030;
    color: $text-bright;
}

Button.-error:hover {
    border: none;
    background: #954040;
    color: $text-bright;
}

Button.-error:focus {
    border: none;
    background: #954040;
    color: $text-bright;
}

/* Disabled State */
Button:disabled {
    background: $bg-medium;
    color: $text-dim;
    border: none;
    opacity: 0.6;
}

#run-buttons {
    height: auto;
    padding: 0;
    margin: 1 0;
    align: left middle;
}

#run-buttons Button {
    margin: 0 1 0 0;
}

/* Charts (RunScreen) */
#metrics-container {
    height: auto;
    min-height: 10;
    background: $bg-dark;
    border: none;
    padding: 1 0;
}

#speed-chart, #latency-chart {
    height: 10;
    border: none;
    background: $bg-dark;
    margin-bottom: 1;
}

#speed-metrics, #latency-metrics {
    height: auto;
    border: none;
    background: $bg-medium;
    padding: 1;
    margin-bottom: 1;
}

/* Footer */
Footer {
    background: $bg-medium;
    color: $text-dim;
}

Footer > .footer--key {
    background: $primary-dark;
    color: $text-bright;
}
